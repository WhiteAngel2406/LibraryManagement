<Window x:Class="LibraryManagement_PRJ01.StudentLoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement_PRJ01"
        mc:Ignorable="d"
        Title="StudentLoginForm" Height="366" Width="345" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label FontSize="30" FontWeight="Bold" Content="Login for Library" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Gmail / UserName" FontWeight="SemiBold"/>
            <TextBox Name="txtUserName" Width="200" Height="30" Margin="0,5" Padding="5"/>

            <Label Content="Password" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <PasswordBox Name="txtPass" Width="200" Height="30" Margin="0,5" Padding="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,20">
            <Button Name="btnLogin" Content="Login" Width="80" Height="30" Margin="10" Click="btnLogin_Click" 
            Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>
            <Button Name="btnBack" Content="Back" Width="80" Height="30" Margin="10" Click="btnBack_Click" 
            Background="#FF9800" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>
            <Button Name="btnForget" Content="ForgetPassword" Width="102" Height="30" Margin="10"  
Background="#FF9800" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Click="btnForget_Click"/>
        </StackPanel>
    </Grid>
</Window>
