<Window x:Class="LibraryManagement_PRJ01.NewPasswordEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement_PRJ01"
        mc:Ignorable="d"
        Title="NewPasswordEmail" Height="366" Width="345" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label FontSize="30" FontWeight="Bold" Content="Forget Password" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Gmail" FontWeight="SemiBold"/>
            <TextBox Name="txtGmail" Width="200" Height="30" Margin="0,5" Padding="5"/>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,20">
            <Button Name="btnOK" Content="OK" Width="80" Height="30" Margin="10" 
    Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Click="btnOK_Click"/>
            <Button Name="btnBack" Content="Back" Width="80" Height="30" Margin="10"  
    Background="#FF9800" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
