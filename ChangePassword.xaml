<Window x:Class="LibraryManagement_PRJ01.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement_PRJ01"
        mc:Ignorable="d"
        Title="ChangePassword" Height="226" Width="255" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontWeight="Bold">Old Password</Label>
            <PasswordBox Name="txtOldpassword" Width="200"></PasswordBox>
            <Label HorizontalAlignment="Center" FontWeight="Bold">New Password</Label>
            <PasswordBox Name="txtNewpassword" Width="200"></PasswordBox>
            <Label HorizontalAlignment="Center" FontWeight="Bold">New Password check</Label>
            <PasswordBox Name="txtNewpassworcheck" Width="200"></PasswordBox>
            <Button Name="btnChange" Content="Change" Width="68" Margin="0,10,0,0" Height="27" Click="btnChange_Click"/>



        </StackPanel>
    </Grid>
</Window>
