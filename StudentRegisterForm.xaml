<Window x:Class="LibraryManagement_PRJ01.StudentRegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement_PRJ01"
        mc:Ignorable="d"
        Title="StudentRegisterForm" Height="457" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="LightBlue">
        
        <StackPanel>
            <Label FontSize="30" HorizontalAlignment="Center" FontWeight="Bold">Register for Library</Label>
            <Label FontWeight="Bold" HorizontalAlignment="Center">Student Name</Label>
            <TextBox Name="txtName" ></TextBox>
            <Label FontWeight="Bold" HorizontalAlignment="Center">Email</Label>
            <TextBox Name="txtEmail" ></TextBox>
            <Label FontWeight="Bold" HorizontalAlignment="Center">Phone Number</Label>
            <TextBox Name="txtPhoneNumber" ></TextBox>
            <Label FontWeight="Bold" HorizontalAlignment="Center">BirthDate</Label>
            <DatePicker Name="dpBirthDate" ></DatePicker>
                <Label FontWeight="Bold" HorizontalAlignment="Center">Class</Label>
            <TextBox Name="txtClass" ></TextBox>
            <Label FontWeight="Bold" HorizontalAlignment="Center">Password</Label>
            <PasswordBox Name="txtPassword" ></PasswordBox>
            <Label FontWeight="Bold" HorizontalAlignment="Center">RePassword</Label>
            <PasswordBox Name="txtRePassword"></PasswordBox>
            <Button Name="btnRegister" Content="Register" Width="80" Margin="0,10,0,0" Click="btnRegister_Click" />
            <Button Name="btnBack"  Content="Back"  Width="80" Margin="0,2,0,0" Click="btnBack_Click"/>
        
        </StackPanel>
        
    </Grid>
</Window>
